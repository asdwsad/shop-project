@model ShopManageProject.Models.Users


@if (Session["GroupName"] == null)
{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
else if (Session["GroupName"].ToString().Equals("Admin"))
{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}
else if (Session["GroupName"].ToString().Equals("User"))
{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<h2>Sửa</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-md-12">
        <h4><strong>Tài khoản</strong></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserId)
        @*@Html.HiddenFor(model => model.UserGroup.Name)*@
        @Html.HiddenFor(model => model.GroupId)



        <div class="form-group col-md-12 col-sm-12">
            <div class="col-md-2">
                <strong> Tên tài khoản :</strong>
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group col-md-12 col-sm-12">
            <div class="col-md-2">
                <strong> Mật khẩu :</strong>
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group col-md-12 col-sm-12">
            <div class="col-md-2">
                <strong> Nhập lại :</strong>
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group col-md-12 col-sm-12">
            <div class="col-md-2">
                <strong>Tên :</strong>
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-12 col-sm-12">
            <div class="col-md-2">
                <strong> Địa chỉ :</strong>
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-12 col-sm-12">
            <div class="col-md-2">
                <strong> Email :</strong>
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-12 col-sm-12">
            <div class="col-md-2">
                <strong> Số điện thoại :</strong>
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group col-md-12 col-sm-12 ">
            <i style="color:green ;font-size:12px">@TempData["Message"]</i>

        </div>

        <div class="form-group col-md-12 col-sm-12 ">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Sửa" class="btn btn-default" id="edit" />
            </div>
        </div>


    </div>
}

<div>
    @if (Session["GroupName"].ToString().Equals("Admin"))
    {
        @Html.ActionLink("Về trang chủ", "ProductList", "Admin")
    }
    else if (Session["GroupName"].ToString().Equals("User"))
    {
        @Html.ActionLink("Về trang chủ", "Index", "Products")
    }
</div>

<script>

    $(document).ready(function () {
        $("#edit").submit(function () {
            alert("Form submitted");
            // return false;
        });
    });
</script>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
